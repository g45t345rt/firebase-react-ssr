{
  "name": "app",
  "version": "0.0.1",
  "scripts": {
    "dev-client": "webpack --config webpack.client.js --watch",
    "dev-ssr": "webpack --config webpack.ssr.js --watch",
    "build-client": "webpack --config webpack.client.js",
    "build-ssr": "webpack --config webpack.ssr.js",
    "build": "npm run build-client && npm run build-ssr",
    "build-prod": "cross-env NODE_ENV=production npm run build-client && cross-env NODE_ENV=production npm run build-ssr",
    "dev": "concurrently npm:dev-client npm:dev-ssr"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.2",
    "baobab": "^2.6.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-ssr-prepass": "^1.1.2",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "babel-plugin-styled-components",
      "@babel/plugin-transform-runtime",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  }
}
